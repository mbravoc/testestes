@model Oficial3.Models.Usuario

@{
    ViewBag.Title = "Login";
    //if(Session["id_Usuario"] == null)
    //{
    //    Response.Redirect("~/Home/Login");
    //}
}
<link href="~/Content/login.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<style>
    .field-validation-error {
        color: red;
    }

    .msgerro {
        text-align: center;
    }
</style>

<script src="~/scripts/bootstrap.min.js"></script>

@using (Html.BeginForm("Login", "Home", FormMethod.Post))

{
    @Html.AntiForgeryToken();


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="container">
        <div class="form-login">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-title">LOGIN - Catálogo</div>
                </div>

                <div style="padding-top:30px" class="#myform">
                    <div style="display:none" id="result" class="alert
                    alert-danger col-sm-12">

                    </div>

                    <!--<div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon
                    glyphicon-user"></i>
                    </span>-->
                    <div>

                        @Html.LabelFor(model => model.nome_Usuario)


                        @Html.EditorFor(model => model.nome_Usuario)

                    </div>
                    <div>
                        @Html.ValidationMessageFor(model => model.nome_Usuario)

                    </div>

                    <!--<div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon
                    glyphicon-lock"></i>
                    </span>-->

                    <div>

                        @Html.LabelFor(model => model.senha_Usuario)



                        @Html.EditorFor(model => model.senha_Usuario)

                    </div>
                    <div>

                        @Html.ValidationMessageFor(model => model.senha_Usuario)
                    </div>
                </div>
                <div>
                    <div colspan="2">
                        <label class="field-validation-error">@Html.DisplayFor(model => model.LoginErrorMessage)</label>
                    </div>

                </div>


                <div style="margin-top:10px" class="form-group">

                    <div class="col-sm-12 controls">
                        <input type="submit" value="Acessar"
                               class="btn primary btn-lg" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
    <script>
        // just for the demos, avoids form submit
        jQuery.validator.setDefaults({
            debug: true,
            success: "valid"
        });
        $("#myform").validate({
            rules: {
                field: {
                    required: true,
                    step: 10
                }
            }
        });
    </script>

}